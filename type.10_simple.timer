import tkinter as tk
import time

def update_time():
    time_rn = time.ctime()
    label_target.config(text=time_rn)
    # call this function again after 1000 ms (1 second)
    root.after(1000, update_time)

# create the main window
root = tk.Tk()
root.title("Stopwatch")

# create a label
label_target = tk.Label(root, font=("Courier", 18))
label_target.pack(pady=10)

# start updating the time
update_time()

# start the Tkinter event loop
root.mainloop()

